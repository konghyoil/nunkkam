<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 인터넷 사용 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 카메라 사용 권한 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 포그라운드 서비스 권한 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- 포그라운드 서비스 카메라 권한 (Android 14 이상) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA"/>
    <!-- 알람 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- 기기 부팅 시 앱 자동 실행 권한 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 절전 모드 방지 권한 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 정확한 알람 설정 권한 -->
    <!--    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />-->
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <!-- 진동 사용 권한 -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <!-- 전체 화면 인텐트 사용 권한 -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <!-- 카메라 사용 선언 -->
    <uses-feature android:name="android.hardware.camera.front" android:required="true" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- 오버레이 사용 선언 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

<!--    구글 클라이언트 권한-->

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nunkkam"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">

        <!-- MainActivity 선언 -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".BlinkActivity"/><!-- BlinkActivity 선언 -->
<!--        <activity android:name=".TimerFragment" /> &lt;!&ndash; TimerActivity 선언 &ndash;&gt;-->
        <activity android:name=".TimerActivity"/> <!-- TimerActivity 선언 -->
<!--        <activity android:name=".ChartFragment" /> &lt;!&ndash; ChartActivity 선언 &ndash;&gt;-->
<!--        <activity android:name=".CalendarFragment" /> &lt;!&ndash; CalendarActivity 선언 &ndash;&gt;-->
<!--        <activity android:name=".CardFragment" /> &lt;!&ndash; CardActivity 선언 &ndash;&gt;-->
        <activity android:name=".ResultActivity"/><!-- ResultActivity 선언 -->
        <activity android:name=".TutorialActivity"/><!-- TutorialActivity 선언 -->






        <!-- 포그라운드 서비스 선언 -->
        <service
            android:name=".CameraService"
            android:foregroundServiceType="camera"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".OverlayService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="camera" />

        <receiver android:name=".AlarmReceiver" />
<!--        <receiver android:name=".MeasurementAlarmReceiver" />-->
        <receiver android:name=".AlarmReceiver" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <!-- File Provider 설정 -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
            <!-- Google Sign-In 클라이언트 ID 설정 -->
            <meta-data
                android:name="com.google.android.gms.signin.internal.CLIENT_ID"
                android:value="YOUR_CLIENT_ID" />
            <meta-data
                android:name="firebase_performance_logcat_enabled"
                android:value="true" />

        </provider>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>