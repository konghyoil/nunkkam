<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- 시리얼 번호를 가져오기 위한 권한 추가 -->


    <uses-feature android:name="android.hardware.camera.front" android:required="true" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nunkkam"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BlinkActivity" /> <!-- BlinkActivity 선언 -->
        <activity android:name=".TimerFragment" /> <!-- TimerActivity 선언 -->
        <activity android:name=".TimerActivity" /> <!-- TimerActivity 선언 -->
        <activity android:name=".ChartFragment" /> <!-- ChartActivity 선언 -->
        <activity android:name=".CalendarFragment" /> <!-- CalendarActivity 선언 -->
        <activity android:name=".CardFragment" /> <!-- CardActivity 선언 -->
        <activity android:name=".ResultActivity" /> <!-- ResultActivity 선언 -->
        <activity android:name=".LoginActivity" /> <!-- LoginActivity 선언 -->
        <activity android:name=".UserManager" /> <!-- UserManager 선언 -->
        <activity android:name=".MyApplication" /> <!-- MyApplication 선언 -->

    </application>

</manifest>