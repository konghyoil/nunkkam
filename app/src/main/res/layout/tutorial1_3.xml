<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#2E2E2E">

    <ImageView
        android:layout_width="163dp"
        android:layout_height="157dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/notifications_active" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_slab_black"
        android:text="관리 알림/ 측정 알림"
        android:textColor="#D9D9D9"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_medium"
        android:text=" 주기적인 측정을 위한 측정 알림, 지속적인 눈 관리를 위한 관리 알림 기능을 제공합니다.\n 측정 알림의 시각과 관리 알림의 주기를 설정할 수 있습니다."
        android:textColor="#D9D9D9"
        android:textSize="20sp" />

</LinearLayout>