<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#D9D9D9"> <!-- 수정: 배경색 변경 -->

    <!-- 툴바 부분은 변경 없음 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/popup_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2E2E2E"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="국민건강보험공단이 알려주는 눈 운동"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </androidx.appcompat.widget.Toolbar>

    <!-- 수정: 상단 마진 추가 -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:contentDescription="눈 운동 이미지"
        android:scaleType="fitCenter"
        android:src="@drawable/step1" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="1. 눈을 뜬 상태에서 안구를 위아래로 움직인다. 5회 이상 반복한다." />

    <!-- 수정: 레이아웃 조정 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <!-- 수정: 왼쪽 화살표 버튼 -->
        <ImageButton
            android:id="@+id/previous_button"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="이전 페이지"
            android:src="@drawable/ic_arrow_left" />

        <!-- 수정: 페이지 인디케이터 텍스트뷰 -->
        <TextView
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="1/6"
            android:textSize="18sp" />

        <!-- 수정: 오른쪽 화살표 버튼 -->
        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="다음 페이지"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>

    <!-- X 버튼 삭제 관련 주석은 그대로 유지 -->
</LinearLayout>