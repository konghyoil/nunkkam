<?xml version="1.0" encoding="utf-8"?>
<!-- 팝업 창의 전체 레이아웃 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009D90">

    <!-- 팝업 카드 뷰 -->
    <androidx.cardview.widget.CardView
        android:layout_width="366dp"
        android:layout_height="467dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        card_view:cardBackgroundColor="#009D90"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp">

        <!-- 카드 뷰 안의 내용물 레이아웃 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- 팝업 창을 닫는 X 버튼 -->
            <TextView
                android:id="@+id/x_button"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="-7dp"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="  X"
                android:textColor="#D9D9D9"
                android:textSize="28sp" />

            <!-- 이미지 뷰 -->
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:contentDescription="Step 1 Image"
                android:src="@drawable/step1" />

            <!-- 설명 텍스트 -->
            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="1. 눈을 뜬 상태에서 안구를 위아래로 움직인다. 5회 이상 반복한다."
                android:textAlignment="center"
                android:textColor="#D9D9D9"
                android:textSize="16sp" />

            <!-- 이전 페이지 버튼 -->
            <Button
                android:id="@+id/previous_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="-4dp"
                android:layout_toStartOf="@id/page_indicator"
                android:backgroundTint="#0D3D39"
                android:text="←"
                android:textColor="#D9D9D9"
                android:textSize="24sp" />

            <!-- 페이지 인디케이터 -->
            <TextView
                android:id="@+id/page_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp"
                android:text="1/6"
                android:textColor="#D9D9D9"
                android:textSize="16sp" />

            <!-- 다음 페이지 버튼 -->
            <Button
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="21dp"
                android:layout_marginBottom="-5dp"
                android:layout_toEndOf="@id/page_indicator"
                android:backgroundTint="#0D3D39"
                android:text="→"
                android:textColor="#D9D9D9"
                android:textSize="24sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
