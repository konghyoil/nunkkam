<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Nunkkam" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/dark_label</item> <!-- 상태바 색상 변경 -->
        <item name="android:windowLightStatusBar">true</item> <!-- 상태바 아이콘 색상 (어두운 배경에 흰색 아이콘 적용) -->
    </style>

    <style name="Theme.Nunkkam" parent="Base.Theme.Nunkkam" />

    <!-- 커스텀 버튼 스타일 -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

    <!-- 캘린더 스타일 -->
    <style name="CalendarDataTextStyle" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="CalendarWeeksTextStyle" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- 시간 텍스트 색상 -->
        <item name="colorAccent">@color/dark_darkbar</item>
        <!-- 기본 텍스트 색상 설정 (확인/취소 버튼에 적용됨) -->
        <item name="android:textColorPrimary">@color/black</item> <!-- 이 부분을 수정 -->
        <item name="android:textColorSecondary">@color/black</item> <!-- 이 부분을 추가 -->
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomButtonPositive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomButtonNegative</item>
<!--        <item name="android:background">@color/white</item>-->
    </style>

    <style name="CustomButtonPositive" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dark_darkbar</item> <!-- OK 버튼 색상 -->
    </style>

    <style name="CustomButtonNegative" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dark_darkbar</item> <!-- Cancel 버튼 색상 -->
    </style>

</resources>